# Força a instalação de todas as dependências
legacy-peer-deps=false
strict-peer-dependencies=false

# Preferir packages online (melhor para CI/CD)
prefer-online=true

# Garante que o package-lock.json seja respeitado
package-lock=true
package-lock-only=false

# Desabilita audit para builds mais rápidos
audit=false

# Engine strict (garante versão correta do Node)
engine-strict=true
