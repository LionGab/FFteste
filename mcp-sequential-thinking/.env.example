# MCP Sequential Thinking Server Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_automation
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# WhatsApp Integration
WHATSAPP_API_URL=http://localhost:3001
WHATSAPP_API_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Google Sheets Integration
GOOGLE_SHEETS_API_KEY=your_google_api_key
GOOGLE_SHEETS_CREDENTIALS_PATH=/path/to/service-account-credentials.json
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-credentials.json

# N8N Integration
N8N_URL=http://localhost:5678
N8N_API_TOKEN=your_n8n_api_token
N8N_WORKFLOW_ID_DATA_IMPORT=data-import-workflow-id
N8N_WORKFLOW_ID_CONVERSION=conversion-tracking-workflow-id
N8N_WORKFLOW_ID_650_CAMPAIGN=650-campaign-workflow-id

# Campaign Configuration
DEFAULT_ROI_TARGET=2250.0
DEFAULT_RESPONSE_RATE_TARGET=0.22
DEFAULT_CONVERSION_RATE_TARGET=0.144
DEFAULT_COST_PER_ACQUISITION_TARGET=50.0
DEFAULT_BUDGET_LIMIT=5000.0
DEFAULT_TARGET_AUDIENCE_SIZE=650

# Rate Limiting
MAX_MESSAGES_PER_HOUR=250
MAX_MESSAGES_PER_DAY=1000
MESSAGES_PER_MINUTE=3
BATCH_SIZE=10
INTERVAL_BETWEEN_MESSAGES=864000

# Monitoring & Alerting
ALERT_WEBHOOK_URL=your_slack_or_teams_webhook_url
ALERT_EMAIL_RECIPIENTS=admin@company.com,manager@company.com
MONITORING_INTERVAL_SECONDS=30
PERFORMANCE_CHECK_INTERVAL_MINUTES=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/mcp-sequential-thinking.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Error Handling Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2.0
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MINUTES=5
ERROR_RECOVERY_TIMEOUT_MINUTES=10

# Performance Thresholds
RESPONSE_RATE_CRITICAL_LOW=0.05
RESPONSE_RATE_WARNING_LOW=0.10
RESPONSE_RATE_TARGET=0.22
CONVERSION_RATE_CRITICAL_LOW=0.02
CONVERSION_RATE_WARNING_LOW=0.05
CONVERSION_RATE_TARGET=0.144
ROI_CRITICAL_LOW=500.0
ROI_WARNING_LOW=1000.0
ROI_TARGET=2250.0

# Security Configuration
API_KEY_ENCRYPTION_SECRET=your_encryption_secret_key
SESSION_SECRET=your_session_secret
JWT_SECRET=your_jwt_secret
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Development Configuration
DEBUG_MODE=false
DEVELOPMENT_MODE=false
TEST_MODE=false
MOCK_EXTERNAL_SERVICES=false

# External Service URLs
EXTERNAL_API_BASE_URL=https://api.external-service.com
BACKUP_API_BASE_URL=https://backup-api.external-service.com
HEALTH_CHECK_URL=http://localhost:8080/health

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
ENABLE_CACHING=true

# Queue Configuration
QUEUE_MAX_RETRIES=5
QUEUE_RETRY_DELAY_SECONDS=60
QUEUE_TIMEOUT_SECONDS=300
QUEUE_CONCURRENCY=10

# Data Processing Configuration
MAX_BATCH_SIZE=1000
PROCESSING_TIMEOUT_MINUTES=30
DATA_VALIDATION_STRICT_MODE=true
ENABLE_DATA_ENRICHMENT=true

# Optimization Configuration
ENABLE_AUTO_OPTIMIZATION=true
OPTIMIZATION_FREQUENCY_HOURS=6
A_B_TEST_DURATION_HOURS=24
MIN_SAMPLE_SIZE_FOR_OPTIMIZATION=100

# Backup and Recovery
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=7
ENABLE_AUTOMATIC_RECOVERY=true
RECOVERY_CHECK_INTERVAL_MINUTES=15

# Integration Timeouts
GOOGLE_SHEETS_TIMEOUT_SECONDS=30
WHATSAPP_API_TIMEOUT_SECONDS=15
DATABASE_QUERY_TIMEOUT_SECONDS=30
EXTERNAL_API_TIMEOUT_SECONDS=20

# File Paths
DATA_DIRECTORY=/data/mcp-sequential-thinking
BACKUP_DIRECTORY=/backups/mcp-sequential-thinking
TEMP_DIRECTORY=/tmp/mcp-sequential-thinking
UPLOAD_DIRECTORY=/uploads/mcp-sequential-thinking

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MACHINE_LEARNING=true
ENABLE_PREDICTIVE_MODELING=true
ENABLE_REAL_TIME_OPTIMIZATION=true
ENABLE_AUTOMATED_REPORTING=true