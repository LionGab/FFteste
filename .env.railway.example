# Railway Environment Variables for WAHA WhatsApp Cloud Integration

# Railway Configuration
RAILWAY_STATIC_URL=
RAILWAY_GIT_COMMIT_SHA=
RAILWAY_GIT_BRANCH=

# WAHA Configuration
WAHA_API_KEY=academia_secure_key_2024_railway
WAHA_LOG_LEVEL=info
WAHA_LOG_FORMAT=json

# WhatsApp Engine Configuration
WHATSAPP_DEFAULT_ENGINE=WEBJS
WHATSAPP_RESTART_ALL_SESSIONS=true
WHATSAPP_START_SESSION=default

# Webhook Configuration for FullForce Academia
WEBHOOK_URL=https://your-app.railway.app/webhook/waha
WAHA_WEBHOOK_EVENTS=message,session.status,session.upsert
WAHA_WEBHOOK_RETRIES=3

# Database Configuration (Railway PostgreSQL)
WAHA_DB_TYPE=postgresql
DATABASE_URL=${DATABASE_URL}

# Session Management
WAHA_SESSIONS_START_ON_STARTUP=true
WAHA_SESSIONS_STOP_ON_LOGOUT=false

# File Storage Configuration
WAHA_FILES_FOLDER=/app/files
WAHA_STORAGE_TYPE=local

# Performance Configuration
WAHA_PROXY_ENABLED=false
WAHA_MAX_SESSIONS=50

# Security Configuration
WAHA_API_KEY_HEADER=X-Api-Key
WAHA_CORS_ENABLED=true

# FullForce Academia Specific Configuration
ACADEMIA_WEBHOOK_SECRET=fullforce_webhook_secret_2024
ACADEMIA_SESSION_NAME=fullforce-session
ACADEMIA_PHONE_NUMBER=+5565999999999

# Campaign Configuration for 650 Inativos
CAMPAIGN_BATCH_SIZE=50
CAMPAIGN_DELAY_BETWEEN_BATCHES=30000
CAMPAIGN_MAX_RETRIES=3

# ROI Calculation Configuration
AVG_MONTHLY_VALUE=129.90
EXPECTED_CONVERSION_RATE_CRITICOS=0.35
EXPECTED_CONVERSION_RATE_MODERADOS=0.25
EXPECTED_CONVERSION_RATE_BAIXA_FREQ=0.15
EXPECTED_CONVERSION_RATE_PROSPECTS=0.08

# N8N Integration (Optional)
N8N_URL=
N8N_API_KEY=
N8N_WEBHOOK_URL=

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000